<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @books %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
            <td>
              <% if @user == current_user %>
              <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %>
              </td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
            <% end %></td>
             <td id="favorite_buttons_<%= @book.id %>">
              <%= render "favorites/favorites", book: @book %>
            </td>
            <td>
              <p>コメント数: <%= @book.book_coments.count %></p></td>
          </tr>
      </table>
      <table class = 'table'>
          <tr>
              <td>
                <% @book.book_coments.each do |book_coment| %>
                 <%= link_to(@book.user) do %>
                 <%= image_tag book_coment.user.get_profile_image, size:'100x100' %><br>
                 <%= book_coment.user.name %>
               <% end %>
               </td>
               <td><%= book_coment.coment %></td>
               <td>
               <% if book_coment.user == current_user %>
                <%= link_to "Destroy", book_book_coment_path(book_coment.book, book_coment), method: :delete,  class: "btn btn-sm btn-danger" %>
               <% end %>
               </td>
              <% end %>
          </tr>
     </table>
            <%= form_with model: [@book, @book_coment] do |f| %>
             <%= f.text_area :coment, class: 'form-control' %>
             <%= f.submit "送信" %>
            <% end %>
    </div>
  </div>
</div>